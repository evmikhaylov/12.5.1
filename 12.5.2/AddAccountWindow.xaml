<Window x:Class="_12._5._2.AddAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_12._5._2"
        mc:Ignorable="d"
        Title="AddAccountWindow" MaxHeight="450" MinHeight="450" MinWidth="800" MaxWidth="800">
    <Grid>

        <TextBox  x:Name="fullNameTextBox" Margin="100,50,100,320" >
        </TextBox>

        <TextBox  x:Name="addBalanceTextBox" Margin="100,150,100,220" >
        </TextBox>
        <TextBlock TextWrapping="Wrap" Margin="100,120,100,270" Text="Введите сумму открытия счёта"/>
        <TextBlock TextWrapping="Wrap" Margin="100,10,100,370" Text="Введите ФИО Клиента"/>
        <TextBlock TextWrapping="Wrap" Margin="200,220,200,180" TextAlignment="Center" Text="Выберите тип счёта"/>
        <Button Content="OK" Click="OkButtonNewAccount_Click" Margin="200,325,200,50" />
        <ComboBox x:Name="accountTypeComboBox" Margin="200,255,200,125"/>
        
    </Grid>
</Window>
