<Window x:Class="_12._5._1.AddAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_12._5._1"
        mc:Ignorable="d"
        Title="AddAccountWindow" Height="450" Width="800">
    <Grid>

        <TextBox  x:Name="fullNameTextBox" Margin="100,50,100,300" >
            <TextBox.Text>
                Введите ФИО Клиента
            </TextBox.Text>
        </TextBox>

        <TextBox
            x:Name="addBalanceTextBox" Margin="100,150,100,200" >
            <TextBox.Text>
                Сумма открытия счёта
            </TextBox.Text>
        </TextBox>
        
        <Button Content="OK" Click="OkButton_Click" Margin="200,250,200,50" />
    </Grid>
</Window>
