<Window x:Class="_12._5._1.TransferWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_12._5._1"
        mc:Ignorable="d"
        Title="TransferWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="fromAccountComboBox" Margin="50,100,450,275"/>
        <ComboBox x:Name="toAccountComboBox" Margin="450,100,50,275"/>
        <TextBox x:Name="amountTextBox" TextWrapping="Wrap" Text="Введите сумму перевода" Margin="300,150,300,225"/>
        <Button x:Name="okButton" Content="ОК" Margin="100,300,100,50" Click="okButton_Click"/>

    </Grid>
</Window>
