        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_12._5._3"
        mc:Ignorable="d"
        Title="RoleSelectionWindow" Height="200" Width="400">
    <Grid>
        <TextBlock TextWrapping="Wrap" Margin="50,0,50,150" TextAlignment="Center" Text="Выберите роль сотрудника"/>
        <ComboBox x:Name="RoleComboBox" Margin="50,50,50,70" />
        <Button Margin="50,130,50,10" Content="OK" Click="OkButton_Click"/>


    </Grid>
</Window>
