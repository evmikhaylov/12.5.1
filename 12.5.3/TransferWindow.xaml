<Window x:Class="_12._5._3.TransferWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_12._5._3"
        mc:Ignorable="d"
        Title="TransferWindow" MaxHeight="450" MinHeight="450"  MinWidth="800" MaxWidth="800">
    <Grid>
        <Button x:Name="transferButton" Content="Перевод" Margin="300,340,300,10" Click="TransferButton_Click"/>
        <TextBlock TextWrapping="Wrap" Margin="10,10,490,380" TextAlignment="Center" Text="Отправитель"/>
        <ComboBox x:Name="fromAccountComboBox" Margin="10,50,490,300"/>
        <TextBlock TextWrapping="Wrap" Margin="490,10,10,380" TextAlignment="Center" Text="Получатель"/>
        <ComboBox x:Name="toAccountComboBox" Margin="490,50,10,300"/>
        <TextBox TextWrapping="Wrap"  x:Name="TransferAmountTextBox" Text="" Margin="100,259,100,121"/>
        <TextBlock TextWrapping="Wrap" Margin="100,220,100,170" TextAlignment="Center" Text="Сумма перевода"/>
        <ComboBox x:Name="fromBankAccounts" Margin="10,150,490,200"/>
        <ComboBox x:Name="toBankAccounts" Margin="490,150,10,200"/>


    </Grid>
</Window>
