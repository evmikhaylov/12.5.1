<Window x:Class="_12._5._3.AddBankAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_12._5._3"
        mc:Ignorable="d"
        Title="AddBankAccountWindow" MaxHeight="450" MinHeight="450" MaxWidth="800" MinWidth="800">
    <Grid>
        <TextBlock TextWrapping="Wrap" Margin="200,100,200,290" Text="Выберите тип счёта если у аккаунта нет действующих счетов" TextAlignment="Center"/>
        <ComboBox x:Name="accountTypeComboBox" ItemsSource="{Binding AccountTypes}" SelectedItem="{Binding AccountType}" Margin="150,140,150,220"/>
        <TextBox x:Name="amountTextBox" TextWrapping="Wrap" Text="{Binding AmountText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="200,260,200,120"/>
        <Button x:Name="okButtonNewBankAccount" Content="OK" Margin="150,350,150,25" Command="{Binding OkCommand}"/>
        <TextBlock TextWrapping="Wrap" Margin="200,220,200,170" Text="Введите сумму открытия счёта"/>
    </Grid>
</Window>
